---
interface Props {
  title: string;
  attribute?: string;
  type: string;
  values?: string[];
}

const { title, attribute, type, values } = Astro.props;
---

<div class="flex flex-col gap-y2">
  <div class="flex justify-between">
    <div class="flex flex-col gap-y0.5 flex-1">
      <span class="font-semibold text-zinc9 dark-text-zinc1">
        {title}
      </span>
      {
        attribute && attribute !== "" ? (
          <span class="w-max px2 py0.5 rd-lg bg-orange2/30 dark-bg-orange8/10 b b-orange3/30 dark-b-orange7/10 text-sm text-orange7 dark-text-orange4">
            {attribute}
          </span>
        ) : null
      }
    </div>
    <div class="text-right flex-1 text-emerald6 dark-text-emerald5">{type}</div>
  </div>
  <div class="flex text-sm text-zinc7 dark-text-zinc3 children-!my0 font-200">
    <slot />
  </div>
  {
    values ? (
      <div class="flex flex-wrap gap-2 children-px2 children-py0.5 children-rd-lg children-bg-zinc2/80 children-dark-bg-zinc8/80 children-b children-b-zinc3/80 children-dark-b-zinc7/80 text-sm">
        {values.map((value) => (
          <span>{value}</span>
        ))}
      </div>
    ) : null
  }
</div>
