{
  "name": "@flexilla/popper",
  "private": false,
  "version": "2.0.1",
  "type": "module",
  "description": "A JavaScript library for positioning dropdown, popovers and tooltips",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/popper.umd.js",
  "module": "./dist/popper.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/popper.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/popper.umd.js"
      }
    },
    "./popper.css": "./dist/popper.css"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "!vite.config.ts",
    "!.gitignore",
    "!tsconfig.json",
    "!biome.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "biome format --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "popper",
    "dropdown",
    "positioning engine",
    "popover",
    "tooltip",
    "js",
    "ts",
    "flexilla",
    "positioning"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/unify-ui-dev/flexilla"
  },
  "bugs": {
    "url": "https://github.com/unify-ui-dev/flexilla/issues"
  },
  "license": "MIT",
  "author": "johnkat-mj"
}
